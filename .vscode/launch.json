{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Test Debugger",
            "type": "debugpy",
            "request": "launch",
            "module": "nose2",
            "args": [
                "-v",
                "<full_test_name>"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Python Debugger: Attach",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 50001
            }
        }
    ]
}